# HIPAA Compliance Backend - Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5004
LOG_LEVEL=info
LOG_DIR=logs

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hipaa_compliance_db

# Redis
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3004

# Master Encryption Key (256-bit hex string - MUST BE SECURED IN PRODUCTION)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_ENCRYPTION_KEY=your_64_character_hex_string_here

# AWS KMS (for production key management)
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Configuration
AUDIT_RETENTION_DAYS=2555
ENABLE_REAL_TIME_AUDIT=true

# Compliance Configuration
BREACH_NOTIFICATION_SLA_HOURS=24
DATA_RETENTION_DEFAULT_DAYS=2555
ENABLE_AUTO_ENCRYPTION=true

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_TELEMETRY=true
