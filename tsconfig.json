{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"],
      "@ai-diagnostics/*": ["ai-diagnostics/*"],
      "@medical-imaging/*": ["medical-imaging-ai/*"],
      "@biosensing/*": ["biosensing/*"],
      "@hipaa/*": ["hipaa-compliance/*"],
      "@biotensor/*": ["biotensor-labs/*"],
      "@mynx/*": ["mynx-natalcare/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./shared/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
