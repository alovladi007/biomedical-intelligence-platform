# Biosensing Backend - Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5003
LOG_LEVEL=info
LOG_DIR=logs

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/biosensing_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# AWS IoT Core Configuration
AWS_REGION=us-east-1
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com
AWS_IOT_PRIVATE_KEY_PATH=./certs/private.pem.key
AWS_IOT_CERTIFICATE_PATH=./certs/certificate.pem.crt
AWS_IOT_CA_PATH=./certs/AmazonRootCA1.pem

# AWS Credentials (for SDK)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Socket.IO
SOCKET_IO_ADAPTER=redis
SOCKET_IO_CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Processing Configuration
ENABLE_VALIDATION=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_ALERT_GENERATION=true
BIOSENSOR_SAMPLING_RATE=100
PROCESSING_WINDOW_SIZE=10

# Bull Queue Configuration
BULL_REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_TELEMETRY=true
