# Medical Imaging AI Backend - Environment Variables

# Application
APP_NAME=Medical Imaging AI
APP_VERSION=1.0.0
DEBUG=false
PORT=5002

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://poweruser:powerpass@localhost:5432/medical_imaging_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=medical-imaging-storage
AWS_KMS_KEY_ID=

# DICOM Storage
DICOM_STORAGE_PATH=/data/dicom
DICOM_MAX_FILE_SIZE=524288000

# Orthanc PACS
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc
ORTHANC_AET=ORTHANC

# ML Models
MODEL_PATH=/models
MODEL_CACHE_SIZE=5

# Model Enablement
RESNET50_ENABLED=true
EFFICIENTNET_ENABLED=true
DENSENET_ENABLED=true
CUSTOM_MODEL_ENABLED=false

# Grad-CAM Configuration
GRADCAM_LAYER_NAME=
GRADCAM_COLORMAP=jet
GRADCAM_ALPHA=0.5

# Inference Settings
BATCH_SIZE=8
NUM_WORKERS=4
INFERENCE_TIMEOUT=300
GPU_ENABLED=true
GPU_DEVICE_ID=0

# Image Processing
IMAGE_SIZE=512
NORMALIZE_MEAN=0.485,0.456,0.406
NORMALIZE_STD=0.229,0.224,0.225

# Model Serving
KSERVE_ENABLED=false
KSERVE_URL=
TRITON_ENABLED=false
TRITON_URL=

# MLflow
MLFLOW_TRACKING_URI=
MLFLOW_EXPERIMENT_NAME=medical-imaging-ai

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_S3_BUCKET=
PHI_ENCRYPTION_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
